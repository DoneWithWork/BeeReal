{
  "manifest_version": 3,
  "name": "BeeReal",
  "version": "1.0.0",
  "description": "BeeReal - A Honey Alternative",
  "default_locale": "ms",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "storage"]
}
